<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bklib_button_corner_radius" />
            <solid android:color="@color/bklibWarningSelected" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bklib_button_corner_radius" />
            <solid android:color="@color/bklibWarningDisabled" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/bklib_button_corner_radius" />
            <solid android:color="@color/bklibWarning" />
        </shape>
    </item>
</selector>