<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <!--android:background="@drawable/bklib_dialog_background"-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_width="270dip"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date_text"
            style="@style/BklibDatePicker_title"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            tools:text="January 21, 1980"/>

        <FrameLayout
            android:id="@+id/date_picker_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/buttonOk"
        style="@style/BklibButtonStylePrimary"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Ok" />

    <Button
        android:id="@+id/buttonCancel"
        style="@style/BklibButtonStyleSecondary"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"
        android:text="Cancel" />

</LinearLayout>
